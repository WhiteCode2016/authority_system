<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.white.mapper.SysMenuMapper">

    <sql id="selectColumns">
      SELECT DISTINCT
            sm.id,
            sm.parent_id,
            sm.parent_ids,
            sm.menuName,
            sm.href,
            sm.icon,
            sm.sort,
            sm.is_show,
            sm.permission,
            sm.remarks
        FROM sys_menu sm
    </sql>

    <!-- 通过userId获取用户的菜单列表 -->
    <select id="getMenusByUserId" resultType="com.white.entity.SysMenu">
        <include refid="selectColumns"/>
        JOIN sys_role_menu srm ON srm.menu_id = sm.id
        JOIN sys_role sr ON sr.id = srm.role_id
        JOIN sys_user_role sur ON sur.role_id = sr.id
        JOIN sys_user su ON su.id = sur.user_id
        WHERE su.id = #{userId}
    </select>

    <!-- 获取所有的菜单列表 -->
    <select id="getAllMenus" resultType="com.white.entity.SysMenu">
        <include refid="selectColumns"/>
    </select>

    <!-- 根据菜单名查询菜单 -->
    <select id="getMenuByMenuName" resultType="com.white.entity.SysMenu">
        <include refid="selectColumns"/>
        WHERE sm.menuName = #{menuName}
    </select>
</mapper>
